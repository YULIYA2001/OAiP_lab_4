#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
#include "Stack.h"

#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}

//при создании формы
void __fastcall TForm1::FormCreate(TObject *Sender)
{
	Edit1->Text = "(a+b)*(c-d)/e";
	char symbols = 'a';
    //заполнение таблицы значений
	StringGrid1->Cells[0][0] = "Имя переменной";
	StringGrid1->Cells[1][0] = "Значение";
	for (int i = 1; i < 6; i++)
	{
		StringGrid1->Cells[0][i] = symbols++;
	}
	StringGrid1->Cells[1][1] = 0.800000;
	StringGrid1->Cells[1][2] = 4.100000;
	StringGrid1->Cells[1][3] = 7.900000;
	StringGrid1->Cells[1][4] = 6.200000;
	StringGrid1->Cells[1][5] = 3.500000;
}

OPZ *opz;     //объект класса OPZ
//кнопка "ПЕРЕВЕСТИ"
void __fastcall TForm1::Button1Click(TObject *Sender)
{
	opz->IntoOPZ(Edit1, Edit2);
}

//кнопка "ПОСЧИТАТЬ"
void __fastcall TForm1::Button2Click(TObject *Sender)
{
	char variable;
	//общий массив значений переменных (начальные значения из таблицы)
	float array[201];
	for (int i = 1; i < 6; i++)
	{
		variable = StringGrid1->Cells[0][i][1]; //имя переменной из таблицы
		//значения переменных из таблицы записать в массив
		array[int(variable)] = StrToFloat(StringGrid1->Cells[1][i]);
	}
	Edit3->Text = FloatToStr(opz->Rezult(Edit2->Text, array));
}

