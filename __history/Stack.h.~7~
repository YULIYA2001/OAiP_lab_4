#ifndef StackH
#define StackH

struct Stack
{
	char data;
	Stack *next;
};

Stack *top = NULL;                   //стек пустой
Stack *InStack(Stack *, char);       //запись в стек
Stack *OutStack(Stack *, char *);    //извлечение из стека (с удалением)

